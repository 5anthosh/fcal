{
  "name": "fcal",
  "version": "0.1.0",
  "description": "Formula evaluation engine",
  "main": "lib/fcal.js",
  "types": "lib/fcal.d.ts",
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "tsc && browserify -p tinyify lib/fcal.js --standalone fcal -o  fcal.min.js",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "btest": "npm run build && jest --config jestconfig.json --coverage",
    "prepare": "npm run build",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/5anthosh/fcal.git"
  },
  "keywords": [
    "formula",
    "interpreter"
  ],
  "author": "Santhosh Kumar",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/5anthosh/fcal/issues"
  },
  "homepage": "https://github.com/5anthosh/fcal#readme",
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.11",
    "browserify": "^16.5.0",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "tinyify": "^2.5.1",
    "ts-jest": "^24.1.0",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.6.3"
  },
  "files": [
    "lib/**/*"
  ],
  "dependencies": {
    "decimal.js": "^10.2.0"
  }
}